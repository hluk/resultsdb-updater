<beans
  xmlns="http://www.springframework.org/schema/beans"
  xmlns:amq="http://activemq.apache.org/schema/core"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
  http://activemq.apache.org/schema/core http://activemq.apache.org/schema/core/activemq-core.xsd">

  <!-- Allows us to use system properties and fabric as variables in this configuration file -->
  <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
    <property name="properties">
      <bean class="io.fabric8.mq.fabric.ConfigurationProperties"/>
    </property>
  </bean>

  <broker xmlns="http://activemq.apache.org/schema/core" brokerName="${broker-name}" dataDirectory="${data}" start="false" restartAllowed="false" schedulePeriodForDestinationPurge="3600000">
    <destinationPolicy>
      <policyMap>
        <policyEntries>
          <policyEntry topic=">" producerFlowControl="true" advisoryForConsumed="true" advisoryForDelivery="true" gcInactiveDestinations="true" inactiveTimoutBeforeGC="604800000">
            <pendingMessageLimitStrategy>
              <constantPendingMessageLimitStrategy limit="1000"/>
            </pendingMessageLimitStrategy>
          </policyEntry>
          <policyEntry topic="ActiveMQ.Advisory.MasterBroker" producerFlowControl="true" advisoryForConsumed="true" advisoryForDelivery="true"/>
          <policyEntry queue=">" producerFlowControl="false" memoryLimit="1mb" advisoryForConsumed="true" advisoryForDelivery="true" gcInactiveDestinations="true" inactiveTimoutBeforeGC="604800000">
          </policyEntry>
        </policyEntries>
      </policyMap>
    </destinationPolicy>

    <destinationInterceptors>
      <virtualDestinationInterceptor>
        <virtualDestinations>
          <virtualTopic name="VirtualTopic.>" prefix="Consumer.*.*." selectorAware="false" concurrentSend="true"/>
        </virtualDestinations>
      </virtualDestinationInterceptor>
      <virtualDestinationInterceptor>
        <virtualDestinations>
          <compositeTopic forwardOnly="false" name="ActiveMQ.Advisory.MessageDelivered.>">
            <forwardTo>
              <queue physicalName="tracer_delivered_messages"/>
            </forwardTo>
          </compositeTopic>
          <compositeTopic forwardOnly="false" name="ActiveMQ.Advisory.MessageConsumed.>">
            <forwardTo>
              <queue physicalName="tracer_consumed_messages"/>
            </forwardTo>
          </compositeTopic>
        </virtualDestinations>
      </virtualDestinationInterceptor>
    </destinationInterceptors>

    <managementContext>
      <managementContext createConnector="false"/>
    </managementContext>

    <persistenceAdapter>
      <kahaDB directory="${data}/kahadb"/>
    </persistenceAdapter>

    <destinations>
      <queue physicalName="tracer_consumed_messages"/>
      <queue physicalName="tracer_delivered_messages"/>
    </destinations>

    <systemUsage>
      <systemUsage>
        <memoryUsage>
          <memoryUsage limit="64 mb"/>
        </memoryUsage>
        <storeUsage>
          <storeUsage limit="100 gb"/>
        </storeUsage>
        <tempUsage>
          <tempUsage limit="50 gb"/>
        </tempUsage>
      </systemUsage>
    </systemUsage>

    <transportConnectors>
      <transportConnector name="openwire" uri="tcp://0.0.0.0:61616?maximumConnections=1000"/>
      <transportConnector name="openwire+ssl" uri="ssl://0.0.0.0:61617?maximumConnections=1000&amp;wantClientAuth=true&amp;needClientAuth=true"/>
      <transportConnector name="amqp" uri="amqp://0.0.0.0:5671"/>
      <transportConnector name="amqp+ssl" uri="amqp+ssl://0.0.0.0:5673?needClientAuth=true&amp;transport.transformer=jms"/>
      <transportConnector name="stomp" uri="stomp://0.0.0.0:61612"/>
      <transportConnector name="stomp+ssl" uri="stomp+ssl://0.0.0.0:61613?needClientAuth=true&amp;transport.enabledProtocols=TLSv1,TLSv1.1,TLSv1.2"/>
    </transportConnectors>
  </broker>


</beans>
